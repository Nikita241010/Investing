    <script>
        // –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è API
        const API_CONFIG = {
            API_KEY: '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',
            API_URL: 'https://openrouter.ai/api/v1/chat/completions'
        };

        // –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞
        let stats = {
            expertsAnalyzed: 0,
            predictionsProcessed: 0,
            totalAccuracy: 0
        };

        // –≠–ª–µ–º–µ–Ω—Ç—ã DOM
        const personInput = document.getElementById('person');
        const yearSelect = document.getElementById('year');
        const analyzeBtn = document.getElementById('analyzeBtn');
        const loadingDiv = document.getElementById('loading');
        const resultDiv = document.getElementById('result');
        const errorDiv = document.getElementById('error');

        // –≠–ª–µ–º–µ–Ω—Ç—ã —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏
        const expertsCountEl = document.getElementById('expertsCount');
        const predictionsCountEl = document.getElementById('predictionsCount');
        const accuracyRateEl = document.getElementById('accuracyRate');

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –∑–∞–ø–æ–ª–Ω–µ–Ω–∏—è —ç–∫—Å–ø–µ—Ä—Ç–∞
        function fillExpert(name) {
            personInput.value = name;
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏
        function updateStats() {
            expertsCountEl.textContent = stats.expertsAnalyzed;
            predictionsCountEl.textContent = stats.predictionsProcessed;
            accuracyRateEl.textContent = stats.expertsAnalyzed > 0 
                ? Math.round(stats.totalAccuracy / stats.expertsAnalyzed) + '%' 
                : '0%';
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –≤—ã–∑–æ–≤–∞ GPT API
        async function callGPTApi(prompt) {
            console.log('üîó –û—Ç–ø—Ä–∞–≤–∫–∞ –∑–∞–ø—Ä–æ—Å–∞ –∫ DeepSeek API...');
            
            try {
                const response = await fetch(API_CONFIG.API_URL, {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${API_CONFIG.API_KEY}`,
                        'Content-Type': 'application/json',
                        'HTTP-Referer': window.location.origin,
                        'X-Title': 'CheckPredict AI Analyzer'
                    },
                    body: JSON.stringify({
                        "model": "deepseek/deepseek-chat-v3.1",
                        "messages": [
                            {
                                "role": "user", 
                                "content": prompt
                            }
                        ],
                        "max_tokens": 2000,
                        "temperature": 0.7
                    })
                });

                console.log('üìä –°—Ç–∞—Ç—É—Å –æ—Ç–≤–µ—Ç–∞:', response.status);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                console.log('‚úÖ –ü–æ–ª—É—á–µ–Ω—ã –¥–∞–Ω–Ω—ã–µ –æ—Ç API');
                
                if (!data.choices || !data.choices[0] || !data.choices[0].message) {
                    throw new Error('–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –æ—Ç–≤–µ—Ç–∞ –æ—Ç API');
                }
                
                return data.choices[0].message.content;
            } catch (error) {
                console.error('‚ùå –û—à–∏–±–∫–∞ API:', error);
                throw error;
            }
        }

        // –§—É–Ω–∫—Ü–∏—è –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏ –ø—Ä–æ–º–ø—Ç–∞ –¥–ª—è –∞–Ω–∞–ª–∏–∑–∞
        function generateAnalysisPrompt(person, year) {
            return `–ü—Ä–æ–∞–Ω–∞–ª–∏–∑–∏—Ä—É–π –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è ${person} –∫–∞—Å–∞—Ç–µ–ª—å–Ω–æ –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç –∑–∞ ${year} –≥–æ–¥.

–¢—Ä–µ–±–æ–≤–∞–Ω–∏—è –∫ –∞–Ω–∞–ª–∏–∑—É:

1. **–ò—Å—Ç–æ—Ä–∏—á–µ—Å–∫–∏–µ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è**: –ù–∞–π–¥–∏ —Ä–µ–∞–ª—å–Ω—ã–µ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è, –∫–æ—Ç–æ—Ä—ã–µ ${person} –¥–µ–ª–∞–ª –≤ ${year} –≥–æ–¥—É –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω–æ:
   - –¶–µ–Ω–æ–≤—ã—Ö –ø—Ä–æ–≥–Ω–æ–∑–æ–≤ –∫–æ–Ω–∫—Ä–µ—Ç–Ω—ã—Ö –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç
   - –†—ã–Ω–æ—á–Ω—ã—Ö —Ç—Ä–µ–Ω–¥–æ–≤
   - –¢–µ—Ö–Ω–æ–ª–æ–≥–∏—á–µ—Å–∫–∏—Ö —Ä–∞–∑–≤–∏—Ç–∏–π
   - –†–µ–≥—É–ª—è—Ç–æ—Ä–Ω—ã—Ö –∏–∑–º–µ–Ω–µ–Ω–∏–π
   –ò –æ–ø–∏—à–∏ –ø—Ä–µ–¥–ø–æ–ª–æ–≥–∞–µ–º—É—é —Ä–µ–∞–∫—Ü–∏—é —Ä—ã–Ω–∫–∞ –Ω–∞ –Ω–∏—Ö

2. **–ê–Ω–∞–ª–∏–∑ —Ç–æ—á–Ω–æ—Å—Ç–∏**: –î–ª—è –∫–∞–∂–¥–æ–≥–æ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è –æ–ø—Ä–µ–¥–µ–ª–∏:
   - –°–±—ã–ª–æ—Å—å –ª–∏ –æ–Ω–æ (–¥–∞/–Ω–µ—Ç/—á–∞—Å—Ç–∏—á–Ω–æ)
   - –§–∞–∫—Ç–∏—á–µ—Å–∫–∏–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç vs –ø—Ä–æ–≥–Ω–æ–∑
   - –ü—Ä–∏—á–∏–Ω—ã —É—Å–ø–µ—Ö–∞/–Ω–µ—É–¥–∞—á–∏
   - –°–±—ã–ª–∞—Å—å –ª–∏ –ø—Ä–µ–¥–ø–æ–ª–∞–≥–∞–µ–º–∞—è —Ä–µ–∞–∫—Ü–∏—è –≤ —Ä–µ–∞–ª–Ω–æ—Å—Ç—å–∏

3. **–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞**:
   - –û–±—â–µ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –Ω–∞–π–¥–µ–Ω–Ω—ã—Ö –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π
   - –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å–±—ã–≤—à–∏—Ö—Å—è –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π
   - –ü—Ä–æ—Ü–µ–Ω—Ç —Ç–æ—á–Ω–æ—Å—Ç–∏ –≤ —Ü–∏—Ñ—Ä–∞—Ö

4. **–ö–æ–Ω—Ç–µ–∫—Å—Ç**: –£—á—Ç–∏ —Ä—ã–Ω–æ—á–Ω—ã–µ —É—Å–ª–æ–≤–∏—è ${year} –≥–æ–¥–∞.

–§–æ—Ä–º–∞—Ç –æ—Ç–≤–µ—Ç–∞:
**–ê–Ω–∞–ª–∏–∑ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π ${person} –∑–∞ ${year} –≥–æ–¥**

üìä **–û–±—â–∞—è —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞:**
‚Ä¢ –í—Å–µ–≥–æ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π: X
‚Ä¢ –°–±—ã–≤—à–∏—Ö—Å—è: Y
‚Ä¢ –¢–æ—á–Ω–æ—Å—Ç—å: Z%

üéØ **–ö–ª—é—á–µ–≤—ã–µ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è –∏ –∏—Ö —Ä–µ–∞–ª–∏–∑–∞—Ü–∏—è:**
[–ü–æ–¥—Ä–æ–±–Ω—ã–π –∞–Ω–∞–ª–∏–∑ –∫–∞–∂–¥–æ–≥–æ –∑–Ω–∞—á–∏–º–æ–≥–æ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏—è]

üí° **–í—ã–≤–æ–¥—ã:**
[–û–±—â–∞—è –æ—Ü–µ–Ω–∫–∞ —Ç–æ—á–Ω–æ—Å—Ç–∏ –∏ –Ω–∞–¥–µ–∂–Ω–æ—Å—Ç–∏ —ç–∫—Å–ø–µ—Ä—Ç–∞]

–û—Ç–≤–µ—á–∞–π –Ω–∞ —Ä—É—Å—Å–∫–æ–º —è–∑—ã–∫–µ, –∏—Å–ø–æ–ª—å–∑—É–π —Ç–æ–ª—å–∫–æ –ø—Ä–æ–≤–µ—Ä—è–µ–º—É—é –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é.`;
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ –æ—Ç–≤–µ—Ç–∞ AI
        function processAIResponse(response, person, year) {
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É
            stats.expertsAnalyzed++;
            stats.predictionsProcessed += 5; // –ü—Ä–∏–º–µ—Ä–Ω–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–µ–¥—Å–∫–∞–∑–∞–Ω–∏–π
            updateStats();

            return response;
        }

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–ª–∏–∫–∞ –ø–æ –∫–Ω–æ–ø–∫–µ –∞–Ω–∞–ª–∏–∑–∞
        analyzeBtn.addEventListener('click', async function() {
            const person = personInput.value.trim();
            const year = yearSelect.value;

            // –í–∞–ª–∏–¥–∞—Ü–∏—è
            if (!person) {
                showError('‚ùå –ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –∏–º—è –∞–Ω–∞–ª–∏—Ç–∏–∫–∞ –¥–ª—è –∞–Ω–∞–ª–∏–∑–∞');
                return;
            }

            if (person.length < 2) {
                showError('‚ùå –ò–º—è —ç–∫—Å–ø–µ—Ä—Ç–∞ –¥–æ–ª–∂–Ω–æ —Å–æ–¥–µ—Ä–∂–∞—Ç—å –º–∏–Ω–∏–º—É–º 2 —Å–∏–º–≤–æ–ª–∞');
                return;
            }

            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≥—Ä—É–∑–∫—É
            showLoading();
            analyzeBtn.disabled = true;
            analyzeBtn.innerHTML = '<i class="fas fa-sync-alt fa-spin"></i> –ê–Ω–∞–ª–∏–∑–∏—Ä—É–µ–º...';

            try {
                console.log(`üéØ –ó–∞–ø—É—Å–∫ –∞–Ω–∞–ª–∏–∑–∞ –¥–ª—è: ${person}, –≥–æ–¥: ${year}`);
                
                const prompt = generateAnalysisPrompt(person, year);
                console.log('üìù –ü—Ä–æ–º–ø—Ç:', prompt);
                
                const aiResponse = await callGPTApi(prompt);
                console.log('ü§ñ –û—Ç–≤–µ—Ç AI:', aiResponse);
                
                const processedResponse = processAIResponse(aiResponse, person, year);
                showResult(processedResponse);
                
                // –ü—Ä–æ–∫—Ä—É—Ç–∫–∞ –∫ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞–º
                document.querySelector('.results').scrollIntoView({ 
                    behavior: 'smooth' 
                });

            } catch (error) {
                console.error('üí• –û—à–∏–±–∫–∞ –∞–Ω–∞–ª–∏–∑–∞:', error);
                
                if (error.message.includes('401')) {
                    showError('‚ùå –û—à–∏–±–∫–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏ API. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ API –∫–ª—é—á.');
                } else if (error.message.includes('429')) {
                    showError('‚ö†Ô∏è –ü—Ä–µ–≤—ã—à–µ–Ω –ª–∏–º–∏—Ç –∑–∞–ø—Ä–æ—Å–æ–≤. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ —á–µ—Ä–µ–∑ –º–∏–Ω—É—Ç—É.');
                } else if (error.message.includes('network') || error.message.includes('Failed to fetch')) {
                    showError('üåê –û—à–∏–±–∫–∞ —Å–µ—Ç–∏. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ –∏–Ω—Ç–µ—Ä–Ω–µ—Ç—É.');
                } else {
                    showError('‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –∞–Ω–∞–ª–∏–∑–µ: ' + error.message);
                }
            } finally {
                analyzeBtn.disabled = false;
                analyzeBtn.innerHTML = '<i class="fas fa-chart-bar"></i> –ó–∞–ø—É—Å—Ç–∏—Ç—å AI-–∞–Ω–∞–ª–∏–∑';
                loadingDiv.style.display = 'none';
            }
        });

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –æ—à–∏–±–∫–∏
        function showError(message) {
            errorDiv.innerHTML = `<i class="fas fa-exclamation-triangle"></i> ${message}`;
            errorDiv.style.display = 'block';
            resultDiv.style.display = 'none';
            loadingDiv.style.display = 'none';
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞
        function showResult(message) {
            // –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º –æ—Ç–≤–µ—Ç –¥–ª—è –ª—É—á—à–µ–≥–æ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
            const formattedMessage = message
                .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                .replace(/\‚Ä¢/g, '‚Ä¢')
                .replace(/(–¢–æ—á–Ω–æ—Å—Ç—å:|–ü—Ä–æ—Ü–µ–Ω—Ç —Å–±—ã–≤—à–∏—Ö—Å—è:)\s*(\d+%)/g, '$1 <span class="accuracy-badge">$2</span>')
                .replace(/\n/g, '<br>');

            resultDiv.innerHTML = formattedMessage;
            resultDiv.style.display = 'block';
            errorDiv.style.display = 'none';
            loadingDiv.style.display = 'none';
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –∑–∞–≥—Ä—É–∑–∫–∏
        function showLoading() {
            loadingDiv.style.display = 'block';
            resultDiv.style.display = 'none';
            errorDiv.style.display = 'none';
        }

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –Ω–∞–∂–∞—Ç–∏—è Enter
        personInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                analyzeBtn.click();
            }
        });

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ CheckPredict –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω');
            personInput.focus();
            updateStats();
        });

        // –ü—Ä–∏–º–µ—Ä—ã –¥–ª—è –±—ã—Å—Ç—Ä–æ–≥–æ —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
        function testAnalysis() {
            personInput.value = '–ú–∞–π–∫–ª –°—ç–π–ª–æ—Ä';
            yearSelect.value = '2023';
            analyzeBtn.click();
        }
    </script>
</body>
